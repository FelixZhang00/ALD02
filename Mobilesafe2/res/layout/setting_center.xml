<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg"
        android:gravity="center_horizontal"
        android:text="设置中心"
        android:textColor="#666666"
        android:textSize="28sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/devide_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip" >

        <TextView
            android:id="@+id/tv_setting_autoupdate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="4dp"
            android:text="自动更新设置"
            android:textColor="#ff000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_setting_autoupdate_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_setting_autoupdate_text"
            android:paddingLeft="4dp"
            android:text="自动更新已开启"
            android:textColor="#ff8b8683"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_setting_autoupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:checked="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/listview_devider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip" >

        <TextView
            android:id="@+id/tv_sc_adressservice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="4dp"
            android:text="号码归属地服务"
            android:textColor="#ff000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_sc_adressservice_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_sc_adressservice_text"
            android:paddingLeft="4dp"
            android:text="号码归属地服务已开启"
            android:textColor="#ff8b8683"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_sc_adressservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:checked="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/listview_devider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip" >

        <TextView
            android:id="@+id/tv_sc_lockservice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="4dp"
            android:text="程序锁服务"
            android:textColor="#ff000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_sc_lockservice_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_sc_lockservice_text"
            android:paddingLeft="4dp"
            android:text="程序锁服务已关闭"
            android:textColor="@color/mytextcolor_red"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_sc_lockservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:checked="false" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/listview_devider" />

    <LinearLayout
        android:id="@+id/ll_sc_select_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bg_selector"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="true"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:text="更改归属地显示风格"
            android:textColor="#ff000000"
            android:textSize="24sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/listview_devider" />

    <LinearLayout
        android:id="@+id/ll_sc_change_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bg_selector"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="true"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:text="更改归属地显示位置"
            android:textColor="#ff000000"
            android:textSize="24sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/listview_devider" />

</LinearLayout>